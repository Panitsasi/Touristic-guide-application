    <form method="POST" >

        <div class="comment-wrapper">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3>Εισαγωγή νέας αξιολόγησης </h3> <!-- Να βάλουμε τον αριθμό από τη βάση-->
                </div>
                <br>
                <label for="proposal_title">Επέλεξε ένα μαγαζί για να αξιολογήσεις:</label> <!-- Να βάλω να φορτώνει τα ονόματα των μαγαζιών της βάσης -->
                <select class="form-control" id="proposal_title" name="proposal_title">
                    {{#each data_database}}
                    <option>{{title}}</option>
                    {{/each}}
                </select>
                <br>
                    <textarea class="form-control" name="comment" id="comment" placeholder="Αφήστε το σχόλιο σας.." rows="3"></textarea>
                    <br>
                    <span id="error"></span> 
                    <button type="submit" value="submit" class="btn btn-info pull-left">Δημοσίευση</button>
                    <div class="clearfix"></div>
                    <hr>
                <div class="panel-body">
                    <h3><small class="pull-right">{{counter}} Αξιολογήσεις</small> Αξιολογήσεις </h3> <!-- Να βάλουμε τον αριθμό από τη βάση-->
                    <br>
                    {{#each review_data_database}}
